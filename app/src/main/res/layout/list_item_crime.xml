<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="50dp">
    <CheckBox
        android:id="@+id/cb_list_item_solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/tv_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/cb_list_item_solved"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Crime Textss"
        />

    <TextView
        android:id="@+id/tv_list_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_list_item_title"
        android:layout_toStartOf="@id/cb_list_item_solved"
        android:padding="4dp"
        tools:text="Crime Textss"/>


</RelativeLayout>